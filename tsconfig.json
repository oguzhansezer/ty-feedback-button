{
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "compilerOptions": {
        "esModuleInterop": true,
        "jsx": "react",
        "types": ["node", "jest"],
        "module": "es2015",
        "moduleResolution": "node",
        "lib": ["dom", "esnext", "ES2015", "es2016", "es5"],
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "dist/esm",
        "sourceMap": true,

        "target": "es6",
        "declaration": true,
        "allowSyntheticDefaultImports": true
    },

    "exclude": ["**/*.test.ts"]
}
